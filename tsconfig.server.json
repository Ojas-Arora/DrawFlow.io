{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./server/dist",
    "rootDir": "./server",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "declaration": false
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules", "dist", "src"]
}
