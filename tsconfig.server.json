{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./server/dist",
    "rootDir": "./server",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules", "dist", "src"]
}
